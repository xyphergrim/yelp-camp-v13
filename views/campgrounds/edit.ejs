<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>"></input>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" value="<%= campground.location %>" id="location"></input>
                </div>
                <div class="form-group">
                    <label for="iamge">Image</label>
                    <input class="form-control" type="text" name="image" value="<%= campground.image %>"></input>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" value="<%= campground.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>