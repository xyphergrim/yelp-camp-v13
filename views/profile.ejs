<% include ./partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1><strong>Welcome back <%= currentUser.username %>!</strong></h1>
        <p class="profile-info">Total Campgrounds: <%= campgrounds.length %></p>
        <p class="profile-info">Favorites: <%= currentUser.favorites.length %></p>
    </div>
    <% if(!campgrounds.length) { %>
        <h2 id="noCampsH2">You have no campgrounds! :(</h2>
    <% } %>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>"></img>
                    <div class="caption">
                          <h4><%= campground.name; %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ./partials/footer %>